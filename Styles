import SwiftUI

struct TitanDesign {
// Palette de couleurs NÃ©on
static let primaryGradient = LinearGradient(
colors: [Color(red: 0, green: 0.5, blue: 1), Color(red: 0.5, green: 0, blue: 1)],
startPoint: .topLeading,
endPoint: .bottomTrailing
)

static let glassEffect = Material.ultraThinMaterial
}

// Bouton futuriste avec animation de pression
struct ApexButtonStyle: ButtonStyle {
func makeBody(configuration: Configuration) -> some View {
configuration.label
.padding(.vertical, 12)
.padding(.horizontal, 25)
.background(TitanDesign.primaryGradient)
.foregroundColor(.white)
.clipShape(Capsule())
.scaleEffect(configuration.isPressed ? 0.92 : 1.0)
.shadow(color: Color.blue.opacity(0.4), radius: configuration.isPressed ? 5 : 15)
.animation(.spring(), value: configuration.isPressed)
}
}

// Carte avec effet de flou et bordure lumineuse
struct GlassCard: ViewModifier {
func body(content: Content) -> some View {
content
.padding()
.background(TitanDesign.glassEffect)
.cornerRadius(24)
.overlay(
RoundedRectangle(cornerRadius: 24)
.stroke(LinearGradient(colors: [.white.opacity(0.5), .clear], startPoint: .topLeading, endPoint: .bottomTrailing), lineWidth: 1)
)
.shadow(color: Color.black.opacity(0.1), radius: 20, x: 0, y: 10)
}
}

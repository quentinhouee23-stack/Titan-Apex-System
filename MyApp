import SwiftUI

@main
struct MyApp: App {
// On récupère le réglage que tu as fait dans l'onglet Profil
@AppStorage("isDarkMode") var isDarkMode: Bool = false

var body: some Scene {
WindowGroup {
ContentView()
// Cette ligne force l'app à changer de couleur
.preferredColorScheme(isDarkMode ? .dark : .light)
}
}
}
